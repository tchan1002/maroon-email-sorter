<div>
  <div>
    <h1>
      List of all emails
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new email
    </h2>

<% if current_user != nil %>
    <form action="/insert_email" method="post">
      <div>
        <label for="subject_box">
          Subject
        </label>

        <input type="text" id="subject_box" name="query_subject">
      </div>
      
      <div>
        <label for="sender_box">
          Sender
        </label>

        <input type="text" id="sender_box" name="query_sender">
      </div>
      
      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="pitch_status_box">
          Pitch status
        </label>

        <input type="text" id="pitch_status_box" name="query_pitch_status">
      </div>

        <div>
        <label for="pitch_box">
          Pitch
        </label>

        <input type="string" id="pitch_box" name="query_pitch">
      </div>

      <button>
        Create email
      </button>
    </form>
  </div>
</div>
<% else %>
<p>You must sign in to start adding emails</p>
<% end %>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Subject
        </th>

        <th>
          Sender
        </th>

        <th>
          Subject
        </th>

        <th>
          Pitch status
        </th>

        <th>
          Pitch
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_emails.each do |an_email| %>
      <tr>
        <td>
          <%= an_email.id %>
        </td>

        <td>
          <%= an_email.user_id %>
        </td>

        <td>
          <%= an_email.subject %>
        </td>

        <td>
          <%= an_email.sender %>
        </td>

        <td>
          <%= an_email.body %>
        </td>

        <td>
          <%= an_email.pitch_status %>
        </td>

         <td>
          <%= an_email.pitch %>
        </td>

        <td>
          <%= time_ago_in_words(an_email.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_email.updated_at) %> ago
        </td>

        <td>
          <a href="/emails/<%= an_email.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
